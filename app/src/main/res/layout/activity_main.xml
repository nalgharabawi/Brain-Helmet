<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="brain.brain_helmet.MainActivity">

    <Button
        android:id="@+id/connectBluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connectBluetooth"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp" />

    <Button
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/navigation"
        android:layout_below="@+id/connectBluetooth"
        android:layout_marginTop="49dp"
        android:layout_alignStart="@+id/connectBluetooth"
        android:layout_alignEnd="@+id/connectBluetooth" />

    <Button
        android:id="@+id/voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/voice"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/navigation"
        android:layout_alignEnd="@+id/navigation"
        android:layout_alignStart="@+id/navigation" />
</RelativeLayout>
